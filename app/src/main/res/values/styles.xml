<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ShoppingList.BottomSheetDialog</item>
    </style>

    <style name="ShoppingList.BottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>



    <!--region ItemCharacter-->
    <style name="TextItemCharacterSubtitle">
        <item name="android:textColor">@color/Gray55</item>
        <item name="android:textSize">@dimen/textSize_item_character_subtitle</item>
    </style>

    <style name="TextItemCharacterDescription">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">@dimen/textSize_item_character_description</item>
    </style>
    <!--endregion-->

    <style name="TextItemEpisodeSubtitle">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/Gray55</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextItemEpisodeDescription">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--endregion-->
    <!--region Base-->
    <style name="BaseRootStyle">
        <item name="android:background">@color/VeryVeryDarkMostlyBlackBlue</item>
    </style>

    <style name="BaseProgressBar">
        <item name="android:indeterminateTint">@color/white</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="BaseItemMaterialCardView">
        <item name="android:layout_margin">10dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/VeryDarkGrayishBlue</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">10dp</item>
    </style>
    <!--endregion-->


    <!--region ItemLocation-->
    <style name="TextItemLocationTitle">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/Gray55</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextItemLocationDescription">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--endregion-->
</resources>